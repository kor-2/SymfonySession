{% extends 'base.html.twig' %}

{% block title %}Liste des formations{% endblock %}

{% block body %}
<h1><i class="fa-solid fa-rectangle-list fa-lg"></i> Liste des Formations</h1>

<div class="container">
    <ul class="list-group mt-5">

        {% for formation in formations %}
        
        <li class="list-group-item"><a href=" {{ path('show_formation', { 'id' : formation.id } )}} ">{{ formation }}</a></li>

        {% endfor %}
        
    </ul>
</div>
{% endblock %}
