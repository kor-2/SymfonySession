{% extends 'base.html.twig' %}

{% block title %}Liste des formations{% endblock %}

{% block body %}
<h1><i class="fa-solid fa-rectangle-list fa-lg"></i> Liste des Formations</h1>
<a class="btn btn-primary" href="{{ path('add_formation') }}">Ajout formation</a>
<div class="container">

<table class="table table-striped">

    <thead >
        <tr class="text-center">
            <th>Nom</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for formation in formations %}
        <tr class="text-center">
            <td><a href=" {{ path('show_formation', { 'id' : formation.id } )}} ">{{ formation }}</a></td>
            <td><a href="{{ path('update_formation', { 'id' : formation.id }) }}"><i class="fa-solid fa-pen"></i></a></td>
        </tr>

        {% endfor %}
    </tbody>
</table>
    <ul class="list-group mt-5">

        
        <li class="list-group-item"></li>

        
    </ul>
</div>
{% endblock %}
