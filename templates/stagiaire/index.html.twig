{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<h1>Liste des stagiaires</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Sexe</th>
            <th>Date de Naissance</th>
            <th>Ville</th>
            <th>Mail</th>
            <th>Téléphone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        {% for stagiaire in stagiaires %}
            
        <tr>
            <td><a href="{{ path('show_stagiaire', { 'id': stagiaire.id}) }}">{{ stagiaire }}</a></td>
            <td>{{ stagiaire.sexe }}</td>
            <td>{{ stagiaire.dateNaissance | date('d / m / Y')}} ({{ stagiaire.age }})</td>
            <td>{{ stagiaire.ville }}</td>
            <td>{{ stagiaire.mail }}</td>
            <td>{{ stagiaire.telephone }}</td>
            <td><a href="{{ path('update_stagiaire', { 'id' : stagiaire.id }) }}"><i class="fa-solid fa-pen"></i></a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>


<a class="btn btn-primary" href="{{ path('add_stagiaire') }}" >Ajouter un stagiaire</a>


{% endblock %}
